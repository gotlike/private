		{
			dialog.dispose();
		}
		if(((JButton)e.getSource()).getText().equals("ÖØÖÃ"))
		{
			dialog.dispose();
			JButton bt_return=new JButton("·µ»Ø");
			JButton bt_login=new JButton("µÇÂ¼");
