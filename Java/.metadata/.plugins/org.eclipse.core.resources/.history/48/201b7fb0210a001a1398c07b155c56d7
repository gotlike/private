						String str=new String(""+num[31]+"");
						lb_num[31].setText(str);
						String str1=new String(""+num[1]+"");
						lb_num[1].setText(str1);
						jck_dishchoose[31].setSelected(false);
						jck_dishchoose[1].setSelected(false);
					}

					UPdate();
				}
				});
			
			jck_dishchoose[31].addActionListener(new ActionListener(){
				public void actionPerformed(ActionEvent e)
				{
					if(!jck_dishchoose[31].isSelected()) {		
						total-=num[31]*price[31];
						num[31]=0;
						num[1]=0;
						lb_totalBill.setText("账单总额："+total+"元");
