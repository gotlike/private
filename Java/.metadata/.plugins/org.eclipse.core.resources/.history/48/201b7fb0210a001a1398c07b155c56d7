				public void actionPerformed(ActionEvent e)
				{	
					int i=0,j;
					JButton bt=(JButton)e.getSource();
					for(j=0;j<36;j++)
					{
						if(bt==bt_dishImage[j])
						{
							i=j;
							break;
						}
					}
					
					if(j<36)
					{
						JTextArea jt=new JTextArea(10,10);
						JButton bt_close=new JButton("关闭");
						BufferedReader s;
						try {
							s=new BufferedReader(new FileReader(""+(i+1)+".doc"));
