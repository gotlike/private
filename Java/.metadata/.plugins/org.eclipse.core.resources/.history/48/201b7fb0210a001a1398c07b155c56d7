						lb_totalBill.setText("账单总额："+total+"元");
						String str=new String(""+num[20]+"");
						lb_num[20].setText(str);
						String str1=new String(""+num[35]+"");
						lb_num[35].setText(str1);
						jck_dishchoose[35].setSelected(false);
					}
						
					else {
						if(num[20]==0) {
							num[20]++;
							num[35]++;
							total+=price[20];
							lb_totalBill.setText("账单总额："+total+"元");
							String str=new String(""+num[20]+"");
							lb_num[20].setText(str);
							String str1=new String(""+num[35]+"");
							lb_num[35].setText(str1);
							jck_dishchoose[35].setSelected(true);
						}
					}

					UPdate();
				}
				});
		}
		
