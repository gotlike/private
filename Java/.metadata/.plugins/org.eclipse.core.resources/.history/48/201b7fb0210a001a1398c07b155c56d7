						dialog.removeAll();
						dialog.setLayout(null);
						dialog.setSize(800,500);
						dialog.add(bt_close);
						dialog.add(jt);
						dialog.setBounds(500, 300, 800, 500);
						dialog.setVisible(true);
					}
				}
			});
				
