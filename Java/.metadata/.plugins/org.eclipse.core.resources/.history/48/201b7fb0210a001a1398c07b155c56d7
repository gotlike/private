		{
			bt_dishadd[0].addActionListener(new ActionListener(){
				public void actionPerformed(ActionEvent e)
				{	
					if(num[0]==0) {
						jck_dishchoose[0].setSelected(true);
						jck_dishchoose[30].setSelected(true);
					}
					num[0]++;
					num[30]++;
					total+=price[0];
					lb_totalBill.setText("账单总额："+total+"元");
					String str=new String(""+num[0]+"");
					lb_num[0].setText(str);
					String str1=new String(""+num[30]+"");
					lb_num[30].setText(str1);
					UPdate();
					
				}
			});
			
			bt_dishreduce[0].addActionListener(new ActionListener(){
				public void actionPerformed(ActionEvent e)
				{
					if(num[0]>1) {
						num[0]--;
						num[30]--;
						total-=price[0];
						lb_totalBill.setText("账单总额："+total+"元");
						String str=new String(""+num[0]+"");
						lb_num[0].setText(str);
						String str1=new String(""+num[30]+"");
						lb_num[30].setText(str1);
					}
						
					else if(num[0]>0){
						num[0]--;
						num[30]--;
						total-=price[0];
						lb_totalBill.setText("账单总额："+total+"元");
						String str=new String(""+num[0]+"");
						lb_num[0].setText(str);
						String str1=new String(""+num[30]+"");
						lb_num[30].setText(str1);
						jck_dishchoose[30].setSelected(false);
						jck_dishchoose[0].setSelected(false);
						
					}
					UPdate();
				}
				});
			
			jck_dishchoose[0].addActionListener(new ActionListener(){
				public void actionPerformed(ActionEvent e)
				{
					if(!jck_dishchoose[0].isSelected()) {		
						total-=num[0]*price[0];
						num[0]=0;
						num[30]=0;
						lb_totalBill.setText("账单总额："+total+"元");
						String str=new String(""+num[0]+"");
						lb_num[0].setText(str);
						String str1=new String(""+num[30]+"");
						lb_num[30].setText(str1);
						jck_dishchoose[30].setSelected(false);
					}
						
					else {
						if(num[0]==0) {
							num[0]++;
							num[30]++;
							total+=price[0];
							lb_totalBill.setText("账单总额："+total+"元");
							String str=new String(""+num[0]+"");
							lb_num[0].setText(str);
							String str1=new String(""+num[30]+"");
							lb_num[30].setText(str1);
							jck_dishchoose[30].setSelected(true);
						}
					}
					UPdate();
				}
				});
		}
		
