					if(!jck_dishchoose[10].isSelected()) {		
						total-=num[10]*price[10];
						num[10]=0;
						lb_totalBill.setText("账单总额："+total+"元");
						String str=new String(""+num[10]+"");
						lb_num[10].setText(str);
					}
						
					else {
						if(num[10]==0) {
							num[10]++;
							total+=price[10];
							lb_totalBill.setText("账单总额："+total+"元");
							String str=new String(""+num[10]+"");
							lb_num[10].setText(str);
						}
					}
					UPdate();
				}
				});
		}

